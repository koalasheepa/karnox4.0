              type="text"
              id="ContactFormCompany-{{ section.id }}"
              class="input-full"
              name="contact[Company]"
              autocapitalize="words"
              value="{% if form.company %}{{ form.company}}{% elsif customer %}{{ customer.company }}{% endif %}">
          </div>
          {% comment %} 5.电话号码 ——可选 {% endcomment %}
          <div class="grid__item medium-up--one-half">
            {%- if section.settings.show_phone -%}
              <label for="ContactFormPhone-{{ section.id }}">Contact Number</label>
              <input
                type="tel"
                id="ContactFormPhone-{{ section.id }}"
                class="input-full"
                name="contact[phone]"
                pattern="[0-9\-]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
            {%- endif -%}
          </div>

          {% comment %} 6.用途 {% endcomment %}
          <h2 class="bulk-section" style="padding-top: 100px;">Order Request</h2>
          <div class="grid__item medium-up--one-half">
            <label for="ContactFormOrder-{{ section.id }}">Purpose for bulk order*</label>
            <input
              type="text"
              id="ContactFormOrder-{{ section.id }}"
              class="input-full"
              name="contact[Order]"
              autocapitalize="words"
              placeholder="Office, Studio, Club, Hotel ..."
              required="required"
              style="font-size:15px"
              value="{% if form.order %}{{ form.order }}{% elsif customer %}{{ customer.order }}{% endif %}">
          </div>


            {% comment %} 7.数量 {% endcomment %}
            <div class="grid__item medium-up--one-half">
              <label for="ContactFormQuantity-{{ section.id }}">Quantity*</label>
              <select
                class="form-dropdown"
                name="contact[quantity]"
                id="ContactFormCountry-{{ section.id }}"
                data-component="quantity"
                required="required"
                aria-labelledby="label_ sublabel__quantity"
                autocomplete="section-input_ quantity"
                style="width: 100%">
                <option value="10-20">10-20</option>
                <option value="21-50">21-50</option>
                <option value="50+">50+</option>
              </select>
            </div>

            {% comment %} 8.品牌 {% endcomment %}
            <div class="grid__item medium-up--one-half">
              <label for="ContactFormBrand-{{ section.id }}">Brand</label>
              <input
                text="text"
                id="ContactFormBrand-{{ section.id }}"
                name="contect[Brand]"
                placeholder="KARNOX"
                disabled="disabled"
                required="required"
                style="width:100%;background-color: transparent;border:1px solid;border-color:#848484;border-radius:8px; color: inherit">
            </div>




          <div class="grid grid--small">
            <div class="grid__item medium-up--one-half" style="width:100%">
              {% comment %} 信息 —— 可选 {% endcomment %}
              <label for="ContactFormMessage-{{ section.id }}">Details*</label>
              <p style="color:#848484;margin: 0 10px 2px;font-size:15px">Chair Series/Model/Color/Quantity</p>
              <textarea
                rows="5"
                id="ContactFormMessage-{{ section.id }}"
                class="input-full"
                name="contact[Message]"
                resize="none"
                required="required"
                placeholder="KARNOX ASSASSIN SERIES/Ghost/White/20pcs">{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>
        </div>

        <div class="grid grid--small">
          <div class="grid__item medium-up--one-half">
            <label for="contact-form-submit-{{ section.id }}" class="hidden-label">{{ 'contact.form.send' | t }}</label>
            <button
              type="submit"
              id="contact-form-submit-{{ section.id }}"
              class="btn">
              {{ 'contact.form.send' | t }}
            </button>
